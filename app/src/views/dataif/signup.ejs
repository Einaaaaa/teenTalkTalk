<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Admin Page</title>
  <link rel="stylesheet" href="/semantic/layout.css">
  <link rel="stylesheet" href="/semantic/semantic.min.css">
  <link rel="stylesheet" href="/css/home/mem.css">
  <link rel="stylesheet" href="/css/home/admin.css">
  <script src="/ckeditor/build/ckeditor.js"></script>
  <!-- <script src="https://cdn.ckeditor.com/ckeditor5/34.0.0/classic/ckeditor.js"></script> -->
  <!-- <script src="https://cdn.ckeditor.com/ckeditor5/34.0.0/classic/translations/ko.js"></script> -->
  <script src="/js/home/mem.js" defer></script>
  <script>
    function regi(){
      if($('#name').val() == ''){
        alert('이름을 입력해주세요.');
        $('#name').focus();
        return false;
      }
      if($('#userid').val() == ''){
        alert('아이디를 입력해주세요.');
        $('#userid').focus();
        return false;
      }
      if($('#password').val() == ''){
        alert('비밀번호를 입력해주세요.');
        $('#password').focus();
        return false;
      }
      if($('#password2').val() == ''){
        alert('비밀번호 확인을 입력해주세요.');
        $('#password2').focus();
        return false;
      }
      if($('#password').val() != $('#password2').val()){
        alert('비밀번호가 일치하지 않습니다.');
        $('#password2').focus();
        return false;
      }
      if($('#user_email').val() == ''){
        alert('이메일을 입력해주세요.');
        $('#user_email').focus();
        return false;
      }
      if($('#user_email').val() != ''){
        var email = $('#user_email').val();
        var emailReg = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/;
        if(!emailReg.test(email)){
          alert('이메일 형식이 올바르지 않습니다.');
          $('#user_email').focus();
          return false;
        }
      }
      return true;
    }
  </script>
</head>
<body>
  <div id='rectanglel1' class='rectanglel1'></div>
  <div id='rectangleb1' class='rectangleb1'></div>
  <%- include('../layout.ejs') %>
<section>
    <div>
        <div class="pagename">회원 등록</div>
        <div>
            <form action="/admin/auth/signup" method="post" name="frm_signup" id="frm_signup">
              <div class="ui form">
                <div class="inline fields">
                  <label>이름  &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</label>
                  <div class="four wide field">
                    <input type="text" name="name" id="name" placeholder="이름"">
                  </div>
                  <label>아이디</label>
                  <div class="four wide field">
                    <input type="text" name="userid" id="userid" placeholder="아이디"">
                  </div>
                </div>
              </div>
              <br>
              <div class="ui form">
                <div class="inline fields">
                  <label>비밀번호</label>
                  <div class="four wide field">
                    <input name="password" id="password" type="password" placeholder="비밀번호"">
                  </div>
                  <div class="four wide field">
                  <input name="password2" id="password2" type="password" placeholder="비밀번호 확인"">
                  </div>
                </div>
              </div>
              <br>
              <!-- 드롭다운 -->
              <div class="ui form">
                <div class="inline fields">
                  <label>권한구분</label>
                  <div class="four wide field">
                    <select class="ui fluid dropdown" name="user_role" id="user_role">
                      <option value="0">관리자</option>
                      <option value="1">사용자</option>
                    </select>
                  </div>
                  <label>회원구분</label>
                  <div class="four wide field">
                    <select class="ui fluid dropdown" name="user_type" id="user_type">
                      <%for(var i=0; i<user_type.length; i++){%>
                        <option value="<%=user_type[i].user_type_code%>"><%=user_type[i].user_type_name%></option>
                      <%}%>
                    </select>
                  </div>
                </div>
              </div>
              <br>
              <div class="ui form">
                <div class="inline fields">
                  <label>연령대</label>
                  <div class="four wide field">
                    <select class="ui fluid dropdown" name="parentsAge_code" id="parentsAge_code">
                      <%for(var i=0; i<parentsAge.length; i++){%>
                        <option value="<%=parentsAge[i].parentsAge_code%>"><%=parentsAge[i].parentsAge_name%></option>
                      <%}%>
                    </select>
                  </div>
                  <label>학교</label>
                  <div class="four wide field">
                    <select class="ui fluid dropdown" name="youthAge_code" id="youthAge_code">
                      <%for(var i=0; i<youthAge.length; i++){%>
                        <option value="<%=youthAge[i].youthAge_code%>"><%=youthAge[i].youthAge_name%></option>
                      <%}%>
                    </select>
                  </div>
                </div>
              </div>
              <br>
              <div class="ui form">
                <div class="inline fields">
                  <label>거주지</label>
                  <div class="four wide field">
                    <select class="ui fluid dropdown" name="emd_class_code" id="emd_class_code">
                      <%for(var i=0; i<emd.length; i++){%>
                        <option value="<%=emd[i].emd_class_code%>"><%=emd[i].emd_class_name%></option>
                      <%}%>
                    </select>
                  </div>
                  <label>성별</label>
                  <div class="four wide field">
                    <select class="ui fluid dropdown" name="sex_class_code" id="sex_class_code">
                      <option value="0">남자</option>
                      <option value="1">여자</option>
                      <option value="2">선택 안함</option>
                    </select>
                  </div>
                </div>
              </div>
              <br>
              <div class="ui form">
                <div class="inline fields">
                  <label>이메일</label>
                  <div class="four wide field">
                    <input type="text" name="user_email" id="user_email" placeholder="이메일"">
                  </div>
                </div>
              </div>
                  <br><br>
                  <!-- <input type="checkbox" name="popup_agree" id="popup_agree">
                  <label>팝업</label>
                  <input type="checkbox" name="email_agree" id="email_agree">
                  <label>이메일</label>
                  <input type="checkbox" name="sms_agree" id="sms_agree">
                  <label>문자</label> -->
                <div>
                    <button class="ui button" type="submit" onclick="return regi()">등록</button>
                    <!-- <button class="ui button" type="button" onclick="location.href='/admin/auth/login'">취소</button> -->
                    <button class="ui button" type="button" onclick="location.href='/admin/dataif'">취소</button>
                </div>
            </form>
        </div>
    </div>
</section>
</div>
</body>

</html>