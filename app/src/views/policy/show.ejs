  <%- include('../layout.ejs') %>
<section>
    <div>
        <div class="pagename">정책 정보 관리</div>
        <table id="policy_table">
            <thead>
                <tr>
                    <th>정책 번호</th>
                    <th>정책 이름</th>
                    <th>정책 내용</th>
                    <th>정책 대상</th>
                    <th>접수 기간</th>
                    <th>정책 수정</th>
                </tr>
            </thead>
            <tbody>
            <% for(var i=0; i<posts.length; i++){ %>
              <!-- <form action="/admin/policy/update/<%=posts[i].userid %>" method="get" > -->
