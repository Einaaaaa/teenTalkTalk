    <script>
      function toggleMenu(id) {
        const container = document.getElementById(id);
        container.classList.toggle("active");
    
        const arrowButton = container.previousElementSibling.querySelector(".arrow-button");
        arrowButton.classList.toggle("arrow-down");
      }
    </script>

    <!-- Logout button -->
    <div class="logout-btn">
      <div style="width: 24px; height: 24px; position: relative">
        <div style="width: 18px; height: 14px; left: 3px; top: 5px; position: absolute">
          <img style="width: 14px; height: 6px; left: 0px; top: 4px; position: absolute; border: 0.60px #585856 solid" src="https://via.placeholder.com/14x6" />
          <div style="width: 12px; height: 14px; left: 6px; top: 0px; position: absolute; border: 0.60px #585856 solid"></div>
